<h2><center>Method creation!</center></h2>







<form>
  <div class="form-group">
    <label for="Method Name:">Name your method</label><button><a href='/user_home'>Back</a></button>
    <input type="text" class="form-control" id="name" placeholder="My.Method">
  </div>
   <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Language</label>
 	 <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
    <option selected>Choose...</option>
    <option value="C">C</option>
    <option value="Java">Java</option>
    <option value="Perl">Perl</option>
    <option value="Python">Python</option>
    <option value="Ruby">Ruby</option>
  </select>
  
  <div class="form-group">
    <label for="description">Description of the method</label>
    <textarea class="form-control" id="description" rows="3"></textarea>
  </div>
  <div class="form-group">
    <label for="mephod_data">The method's code</label>
    <textarea class="form-control" id="mephod_data" rows="15"></textarea>
  </div>
  <label><h4><center>Tags</center></h4></label><br>
    <% Tag.all.each do |tag| %>
      <div class="form-check form-check-inline">
      <label><%= tag.name %></label>
      <input class="form-check-input" type="checkbox" id="tag_<%=tag.id%>" name="mephod[tag_ids][]" value="<%= tag.name %>">
    	</div>
    <% end %>
	<input class="btn btn-primary" type="submit" value="submit">
</form>
